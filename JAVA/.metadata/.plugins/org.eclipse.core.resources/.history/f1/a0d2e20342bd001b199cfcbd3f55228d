package kr.ac.kopo.week4.day17.homework;

import java.io.File;

public class JavaExplorer {
	public static void main(String[] args) {
		File dirObj = new File("iodata");
		System.out.println("=============================");
		System.out.println("\t" + dirObj.getName() + " 정보");
		System.out.println("=============================");

		String[] list = dirObj.list();
		
		for(String name : list) {
			File fileObj = new File(dirObj.getName()+"/"+name);
			long size = fileObj.length();
			boolean bool = fileObj.isFile();
			String isFile = (bool ? "파일" : "폴더");
			
			System.out.println(name + "\t\t" + isFile);
		}	
	}
	
}
