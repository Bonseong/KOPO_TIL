package kr.ac.kopo.week4.day17.homework;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import kr.ac.kopo.util.ConnectionFactory;

public class PrnEmpSalary {
	public static void main(String[] args) {
		String sql = "SELECT J.JOB_TITLE, AVG(E.SALARY) AS AVG_SAL FROM EMPLOYEES E, JOBS J WHERE J.JOB_ID = E.JOB_ID GROUP BY J.JOB_TITLE ORDER BY AVG_SAL DESC";

		try (Connection conn = new ConnectionFactory().getConnection();
				PreparedStatement pstmt = conn.prepareStatement(sql);) {

			ResultSet rs = pstmt.executeQuery();

			while (rs.next()) {
				String job_title = rs.getString("JOB_TITLE");
				String avg_sal = rs.getString("AVG_SAL");
				System.out.println("[" + job_title + "] " + avg_sal);

			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
